---
import logo from "../../assets/Destino_Viquingo_logo.svg";
import corvo from "../../assets/img/icons/cuervo_vikingo.svg";
import CarritoBtn from "../ui/CarritoBtn.astro";
import MercarBtn from "../ui/MercarBtn.astro";
import fondo from "../../assets/topbar-bg.png";
import menuIcon from "../../assets/img/icons/menu_icon.svg";

const pathname = Astro.url.pathname;
---

<header class="header hide-on-med-and-down" style={`background-image: url(${fondo.src});`}>
  <div class="container">
    <div class="header__row">
      <div class="header__logo">
        <div class="header__logo-icon">
          <img
            src={logo.src}
            alt="Logo de Destino Viquingo"
            class="header__logo-img"
          />
        </div>
        <div class="header__corvo">
          <img
            src={corvo.src}
            alt="Icono de detalle do corvo viquingo"
            class="header__corvo-img"
          />
        </div>
      </div>
      <nav class="header__nav">
        <a
          href="/"
          class:list={{
            header__a: true,
            header__active: pathname === '/',
          }}
          aria-current={pathname.startsWith("/") ? "page" : "false"}
          >INICIO</a
        >
               
        <a
          href="/contacto"
          class:list={{
            header__a: true,
            header__active: pathname.startsWith("/contacto"),
          }}
          aria-current={pathname.startsWith("/contacto") ? "page" : "false"}
          >CONTACTO</a
        >
      </nav>
      <div class="header__mercar">
        <MercarBtn />
        <CarritoBtn />
      </div>
    </div>
  </div>
</header>

<header class="header--mobile hide-on-med-and-up show-on-medium" style={`background-image: url(${fondo.src});`}>
  <div class="header__container--mobile">
    <img
      class="header__img--mobile"
      src={logo.src}
      alt="Logo de Entradas Vivas"
    />
    <div class="header__buttons">
      <button id="menuBtn" class="header__button-menu">
        <img class="header__icon--menu" src={menuIcon.src} alt="Menú móvil" />
      </button>
    </div>
  </div>

  <nav id="menu" class="header__nav--mobile">
    <a class={`header__a--mobile ${pathname === "/" ? "active" : ""}`} href="/"
      >INICIO</a
    >

    <a
      class={`header__a--mobile ${pathname === "/contacto" ? "active" : ""}`}
      href="/contacto">CONTACTO</a
    >
          <div class="header__mercar header__button--form-mobile">
        <MercarBtn />
        <CarritoBtn />
      </div>
  </nav>
</header>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("menuBtn")?.addEventListener("click", () => {
      document.getElementById("menu")?.classList.toggle("show");
    });
  });
</script>
<script type="module">
  if (typeof window !== 'undefined') {
    const badge = document.querySelector('.cart-badge');
    const CART_KEY = 'dv_cart';

    const updateCartBadge = () => {
      const raw = window.localStorage.getItem(CART_KEY);
      if (!badge) return;

      if (!raw) {
        badge.textContent = '0';
        return;
      }
      const cart = JSON.parse(raw);
      const total = Object.values(cart).reduce(
        (sum, item) => sum + (item.quantity ?? 0),
        0
      );
      badge.textContent = String(total);
    };

    updateCartBadge();
    window.addEventListener('dv:cart-updated', updateCartBadge);
  }
</script>


<style>
  .header {
    width: 100vw;
    padding-top: 17px;
    background-position: bottom;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .header__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header__logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .header__logo-img {
    min-height: 43px;
  }

  .header__corvo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(
      0deg,
      var(--theme-color-acento) 0%,
      rgba(11, 9, 7, 0) 100%
    );
    border-bottom: 2px solid var(--gold);
  }

  .header__corvo::after {
    content: url(/assets/nav-top-home-decopng.png);
    width: 100%;
    position: relative;
    top: 4px;
  }

  .header__nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .header__a {
    font-family: var(--font-secondary);
    font-size: 1rem;
    font-weight: 400;
    text-align: center;
    line-height: 26px;
    color: var(--text-color-texto-principal);
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 80px;
  }

.header__active {
  color: var(--gold);
}

.header__active::after {
  content: url(/assets/nav-top-home-decopng.png);
  width: 100%;
  position: relative;
  top: 4px;
  height: 2px;
}

  .header__a:hover {
    color: var(--gold);
  }

  .header__mercar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

   /* Header mobile */

  .header--mobile {
    padding: 0px 30px;
    background-repeat: no-repeat;
    background-position: bottom center;
    background-size: cover;
  }

  .header__container--mobile {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0px;
    border-bottom: 1px solid var(--text-secondary);
  }

  .header__img--mobile {
    width: 87px;
    height: 99px;
  }

  .header__button-menu{
    background: transparent;
    border: none;
  }

  .header__nav--mobile {
    display: none;
    flex-direction: column;
    align-items: start;
    gap: 1rem;
    padding-top: 30px;
    height: calc(100vh - 146px);
  }

  .header__a--mobile {
    font-size: 2rem;
    font-family: var(--font-secondary);
    text-decoration: none;
    line-height: 22px;
    font-weight: 500;
    color: var(--text-color-texto-secundario);
    padding: 15px 0px;
    cursor: pointer;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    width: 100%;
  }

  .header__button--form-mobile {
    margin-top: 30px;
    width: 100%;
    justify-content: space-between;
  }

  .active {
    color: var(--theme-color-acento);
  }

  .show {
    display: flex;
  }
</style>
