---
import videoPoster from '../../assets/img/video-poster.png';
import videoFile from '../../assets/video/DestinoViquingo_Booktrailer_13022026.mp4';
import playIcon from '../../assets/play_video_icon.png';
---

<section class="trailer">
  <div class="trailer__frame">
    <video
      class="trailer__video"
      src={videoFile}
      poster={videoPoster.src}
      preload="metadata"
      playsinline
    ></video>

    <!-- Overlay personalizado -->
    <button class="trailer__overlay" type="button">
      <div class="trailer__badge">
          <img class="trailer__icon" src={playIcon.src} alt="Icono de reproducir video" />
      </div>
      <p class="trailer__label">VER TRAILER</p>
      <p class="trailer__time">00:00:32s</p>
    </button>
  </div>
</section>


<script type="module">
  if (typeof window !== 'undefined') {
    const frame = document.querySelector('.trailer__frame');
    const video = frame?.querySelector('.trailer__video');
    const overlay = frame?.querySelector('.trailer__overlay');

    if (video && overlay) {
      overlay.addEventListener('click', () => {
        overlay.classList.add('trailer__overlay--hidden');
        video.setAttribute('controls', 'true');
        video.play();
      });
    }
  }
</script>


<style>
    .trailer{
        max-width: 720px;
    }

   .trailer__frame {
  position: relative;
  width: 100%;
  max-width: 720px;
  border-radius: 1.5rem;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
}

.trailer__video {
  position: relative;
  z-index: 1;
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  background: #000;
}

.trailer__overlay {
  position: absolute;
  inset: 0;
  z-index: 2; /* por encima del v√≠deo */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  border: none;
  background: radial-gradient(circle at center, rgba(0,0,0,0.1), rgba(0,0,0,0.8));
  color: #f9fafb;
  cursor: pointer;
  transition: background 0.3s ease, opacity 0.3s ease;
}

.trailer__overlay--hidden {
  opacity: 0;
  pointer-events: none;
}

.trailer__icon{
    width: 94px;
    height: 95px;
}

.trailer__label{
    font-family: var(--font-secondary);
    font-size: 1rem;
    color: var(--text-color-texto-secundario);
}

.trailer__time{
    font-family: var(--font-secondary);
    font-size: .8rem;
    color: var(--text-color-texto-secundario);
}
</style>