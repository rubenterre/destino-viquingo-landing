---
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header.astro";
import TitlePage from "../components/ui/TitlePage.astro";
import Footer from "../components/layout/Footer.astro";

---

<Layout>
<Header />
         <TitlePage titular="/assets/titles/Contacto.svg" alt="Contacto" subtitular="¿Tienes alguna pregunta? ¿Necesitas ayuda? No lo dudes, escríbanos."/>

  <main class="main">
    <div class="container">
      <section class="contacto">
     

        <form
          class="contacto__form"
          name="contacto"
          method="POST"
          netlify
          netlify-honeypot="bot-field"
          action="/gracias"
          data-netlify="true"
        >
          <!-- Campo honeypot para spam -->
          <input type="hidden" name="form-name" value="contacto" />
          <p class="hidden">
            <label class="contacto__label">
              <span>Non encher:</span>
              <input name="bot-field" />
            </label>
          </p>

          <div class="contacto__fila-doble">
            <label class="contacto__label">
              <span>Nombre completo</span>
              <input
                class="contacto__input"
                type="text"
                name="nombre"
                required
                placeholder="Escribe tu nombre completo"
              />
            </label>

            <label class="contacto__label">
              <span>Email</span>
              <input
                class="contacto__input"
                type="email"
                name="email"
                required
                placeholder="Escribe tu email"
              />
            </label>
          </div>
          

          <label class="contacto__label">
            <span>Mensaxe</span>
            <textarea
                required
              class="contacto__input contacto__textarea"
              name="estilo"
              rows="4"
              placeholder="Escribe referencias para el diseño o alguna petición concreta"
            ></textarea>
          </label>

          <label class="contacto__label contacto__label--checkbox">
            <input
              class="contacto__checkbox"
              type="checkbox"
              name="acepto-privacidad"
              value="1"
              required
            />
            <span>
              Lín e acepto a
              <a href="/privacidad" target="_blank" rel="noopener noreferrer">
                política de privacidade
              </a>, e consinto o tratamento dos meus datos para xestionar esta
              solicitude, puidendo retirar o meu consentimento en cualquera
              momento.
            </span>
          </label>

          <div class="contacto__enviar">
            <button class="contacto__submit" type="submit"
              >Enviar solicitude</button
            >
          </div>
        </form>
      </section>
    </div>
  </main>
  <Footer/>
</Layout>

<style>
  .main {
    padding: 2rem 0px;
    
  }



  /* FORM */

  .contacto__form {
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
    margin-top: 1rem;
  }

  .contacto__label {
    display: flex;
    flex-direction: column;
    gap: 0.55rem;
    font-size: 0.9rem;
    color: var(--text-color-texto-secundario);
  }

  .contacto__label span {
    font-family: var(--font-primary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.75rem;
    color: var(--text-color-texto-secundario);
  }

  /* Inputs / selects / textarea */

  .contacto__fila-doble {
    display: flex;
    gap: 1.25rem;
  }

  .contacto__fila-doble .contacto__label {
    flex: 1;
  }

  @media (max-width: 640px) {
    .contacto__fila-doble {
      flex-direction: column;
    }
  }

  .contacto__input {
    width: 100%;
    padding: 0.9rem 1rem;
    border-radius: 14px;
    border: 1px solid rgba(227, 222, 255, 0.22); /* var(--light) soft */
    background: var(--azul_medieval);
    color: var(--text-color-texto-primario);
    font-family: var(--font-primary);
    font-size: 0.95rem;
    outline: none;
    transition:
      border-color 0.2s ease,
      box-shadow 0.2s ease,
      background 0.2s ease;
    appearance: none;
  }

  .contacto__input::placeholder {
    color: var(--text-color-texto-secundario);
    opacity: 0.8;
  }

  /* Textarea */

  .contacto__textarea {
    resize: vertical;
    min-height: 130px;
  }

  /* Checkbox */

  .contacto__label--checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.6rem;
    font-size: 0.8rem;
    line-height: 1.4;
  }

  .contacto__checkbox {
    margin-top: 0.1rem;
    width: 18px;
    height: 18px;
    border-radius: 4px;
    accent-color: var(--theme-color-acento); /* para navegadores que lo soporten */
  }

  .contacto__label--checkbox a {
    color: var(--accent-warm);
    text-decoration: underline;
    text-decoration-thickness: 1px;
  }

  .contacto__label--checkbox a:hover {
    color: var(--theme-color-acento);
  }

  /* Focus / hover states */

  .contacto__input:focus {
    border-color: var(--theme-color-acento);
    background: rgba(34, 22, 59, 0.98);
    box-shadow: 0 0 0 1px rgba(255, 48, 64, 0.6);
  }

  /* Select específico, por si quieres custom icono más adelante */
  select.contacto__input {
    cursor: pointer;
  }

  /* Botón enviar */

  .contacto__enviar {
    margin-top: 1.2rem;
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .contacto__submit {
    border: none;
    border-radius: 999px;
    padding: 0.9rem 1.9rem;
    background: var(--theme-color-acento);
    color: var(--text-color-texto-secundario);
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition:
      transform 0.15s ease,
      box-shadow 0.15s ease,
      background 0.15s ease;
    box-shadow: 0 4px 14px rgba(255, 48, 64, 0.55);
  }

  .contacto__submit:hover {
    background: var(--gold);
    color: var(--theme-color-fondo-principal);
    transform: translateY(-1px);
    box-shadow: 0 8px 10px rgba(255, 123, 106, 0.55);
  }

  .contacto__submit:active {
    transform: translateY(0);
    box-shadow: 0 8px 12px rgba(255, 48, 64, 0.45);
  }

  /* Utilidades */

  .hidden {
    display: none;
  }

  /* Responsive */

  @media (max-width: 768px) {
    .main {
      padding: 0rem;
    }

    .contacto {
      border-radius: 24px;
    }

    .contacto__h1 {
      font-size: 1.8rem;
    }
  }
</style>